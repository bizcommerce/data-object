{
  "name": "tiagosampaio/data-object",
  "description": "Object to handle data.",
  "type": "library",
  "license": "OSL-3.0",
  "authors": [
    {
      "name": "Tiago Sampaio",
      "email": "tiago@tiagosampaio.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": "^7.0"
  },
  "require-dev": {
    "codacy/coverage": "dev-master",
    "phpunit/phpunit": "^6.4",
    "fzaninotto/faker": "^1.8",
    "squizlabs/php_codesniffer": "^3.3"
  },
  "autoload": {
    "psr-4": {
      "TiagoSampaio\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "TiagoSampaioTest\\": "dev/test/unit/TiagoSampaio"
    }
  },
  "scripts": {
    "phpunit": [
      "vendor/bin/phpunit -c dev/test/unit/phpunit.xml.dist dev/test/unit/ --coverage-html temp/tests/phpunit/coverage"
    ],
    "phpcs": [
      "vendor/bin/phpcs --standard=PSR2 --severity=1 src"
    ],
    "tests": [
      "@phpunit",
      "@phpcs"
    ],
    "post-autoload-dump": [
      "@tests"
    ]
  }
}
