<?xml version="1.0"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd" colors="true" columns="max"
         beStrictAboutTestsThatDoNotTestAnything="false">
    <coverage includeUncoveredFiles="true">
        <include>
            <directory suffix=".php">../../../src</directory>
        </include>
    </coverage>
    <testsuite name="TiagoSampaio Unit Tests">
        <directory suffix="Test.php">../../../dev/test/unit/TiagoSampaio</directory>
    </testsuite>
    <php>
        <ini name="xdebug.max_nesting_level" value="200"/>
        <ini name="date.timezone" value="UTC"/>
    </php>
</phpunit>
